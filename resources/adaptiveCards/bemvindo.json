{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                      {
                          "type": "Container",
                          "items": [
                              {
                                  "type": "ImageSet",
                                  "images": [
                                      {
                                          "type": "Image",
                                          "size": "Medium",
                                          "url": "https://www.micrologi.com.br/images/guardiao.jpg"
                                      }
                                  ],
                                  "horizontalAlignment": "Center",
                                  "separator": true
                              }
                          ],
                          "horizontalAlignment": "Center"
                      }
                  ],
                  "horizontalAlignment": "Center"
              },
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "RichTextBlock",
                          "inlines": [
                              {
                                  "type": "TextRun",
                                  "text": "Eu sou o Guardião. Eu sou um assistente virtual inteligente e ajudarei você a monitorar sua turbina ajudando em incidentes e evitando acidentes. Conte comigo ainda para dúvidas técnicas quanto a turbina. Estou aqui para ajudar!"
                              }
                          ]
                      }
                  ]
              }
          ],
          "separator": true
      }
  ]
}